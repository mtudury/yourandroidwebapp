<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_header_general"
        android:key="general_settings"
        >
        <CheckBoxPreference
            android:key="google_drive_usage"
            android:title="@string/pref_title_use_google_drive"
            android:summary="@string/pref_description_use_google_drive"
            android:defaultValue="false"
            />
        <CheckBoxPreference
            android:key="google_drive_use_custom"
            android:title="@string/pref_title_use_custom_google_drive"
            android:summary="@string/pref_description_use_custom_google_drive"
            android:defaultValue="false"
            />
        <EditTextPreference
                    android:key="google_drive_path_custom"
                    android:title="@string/pref_title_google_drive_path_custom"
                    android:defaultValue="@string/pref_default_google_drive_path_custom"
                    android:selectAllOnFocus="true"
                    android:inputType="textUri"
                    android:capitalize="none"
                    android:singleLine="true"
                    android:maxLines="1" />

        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <!--EditTextPreference
            android:key="example_text"
            android:title="@string/pref_title_display_name"
            android:defaultValue="@string/pref_default_display_name"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" /-->

        <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
             dismiss it. -->
        <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
        <!--ListPreference
            android:key="example_list"
            android:title="@string/pref_title_add_friends_to_messages"
            android:defaultValue="-1"
            android:entries="@array/pref_example_list_titles"
            android:entryValues="@array/pref_example_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" /-->
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_import_export"
        android:key="general_settings"
        >
        <Preference
            android:key="google_drive_import"
            android:title="@string/pref_title_google_drive_import"
            android:summary="@string/pref_description_google_drive_import"
            android:defaultValue="false"
            />
        <Preference
            android:key="google_drive_export"
            android:title="@string/pref_title_google_drive_export"
            android:summary="@string/pref_description_google_drive_export"
            android:defaultValue="false"
            />
        </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/pref_header_import_export_local"
        android:key="general_settings"
        >
        <Preference
            android:key="local_import"
            android:title="@string/pref_title_local_import"
            android:summary="@string/pref_description_local_import"
            android:defaultValue="false"
            />
        <Preference
            android:key="local_export"
            android:title="@string/pref_title_local_export"
            android:summary="@string/pref_description_local_export"
            android:defaultValue="false"
            />

    </PreferenceCategory>

</PreferenceScreen>
