<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_header_advancedsettings"
        android:key="general_settings"
        >
        <CheckBoxPreference
            android:key="webview_disable_playback_require_gesture"
            android:title="@string/pref_title_disable_playback_require_gesture"
            android:summary="@string/pref_description_disable_playback_require_gesture"
            android:defaultValue="false"
            />
        <EditTextPreference
            android:key="webview_user_agent"
            android:title="@string/pref_title_webview_user_agent"
            />
        <CheckBoxPreference
            android:key="webview_force_downloadviewer_chooser"
            android:title="@string/pref_title_force_downloadviewer_chooser"
            android:summary="@string/pref_description_force_downloadviewer_chooser"
            android:defaultValue="false"
            />
        <CheckBoxPreference
            android:key="webview_allow_geoloc"
            android:title="@string/pref_title_webapp_allow_geoloc"
            android:summary="@string/pref_description_webapp_allow_geoloc"
            android:defaultValue="false"
            />
    </PreferenceCategory>

</PreferenceScreen>
